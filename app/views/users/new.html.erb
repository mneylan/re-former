<h1>New User Form</h1>

  
<%= form_for @user do |f| %>
  
  <%= f.label 'Username:' %>
  <%= f.text_field :username %><br><br>
 
  <%= f.label 'Password:'%>
  <%= f.password_field :password %><br><br>
  
  <%= f.label 'Email:' %>
  <%= f.text_field :email, placeholder: "defaultemail@email.email" %><br><br>

  <%= f.submit "Submit" %>
<% end %>

